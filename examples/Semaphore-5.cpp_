#include <stm32f4_discovery.h>
#include <os.h>

auto led = Led();
auto sem = Semaphore(0);

struct slaTask : public Task
{
	slaTask(): Task(0, run) { start(); }

	private:
	static void run()
	{
		sem.wait();
		led.tick();
	}
};
	
struct masTask : public Task
{
	masTask(): Task(0, run) { start(); }

	private:
	static void run()
	{
		This::sleepFor(SEC);
		sem.give();
	}
};

auto sla = slaTask();
auto mas = masTask();

int main()
{
	Task::This::sleep();
}
