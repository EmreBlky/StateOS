#include <stm32f4_discovery.h>
#include <os.h>

auto led = Led();
auto sig = Signal();

void consumer()
{
	unsigned x;

	for (;;)
	{
		x = sig.wait(sigAll);
		led = SIGSET(x);
	}
}

void producer()
{
	unsigned x = 0;

	for (;;)
	{
		ThisTask::sleepFor(SEC);
		sig.give(x);
		x = (x + 1) % 4;
	}
}

int main()
{
	Task::Create(0, consumer);
	Task::Create(0, producer);

	ThisTask::sleep();
}
